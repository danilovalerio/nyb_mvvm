<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.details.BooksDetailsActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPrincipal"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        />

    <TextView
        style="@style/MinhaTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_details_title_label" />

    <TextView
        android:id="@+id/booksDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Título 1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        style="@style/MinhaTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/book_details_description_label"/>

    <TextView
        android:id="@+id/booksDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Descrição 1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

</LinearLayout>